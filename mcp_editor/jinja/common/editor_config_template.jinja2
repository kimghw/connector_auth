{#
  Jinja2 Template for editor_config.json

  Variables:
    - servers: List of server dictionaries with keys:
      - name: server name (e.g., 'outlook', 'attachment')
      - template_definitions_path: path to template file
      - tool_definitions_path: path to tool definitions
      - backup_dir: backup directory
      - types_files: list of {server_name}_types.py paths
      - host: host address
      - port: port number

  Note: Templates are now organized in mcp_editor/{server_name}/ folders
        First server in the list will be used as default when no profile is specified
#}
{
{% for server in servers %}
  "{{ server.name }}": {
    "template_definitions_path": "mcp_{{ server.name }}/tool_definition_templates.yaml",
    "tool_definitions_path": "{{ server.tool_definitions_path }}",
    "backup_dir": "mcp_{{ server.name }}/backups",
    "types_files": [
{% for types_file in server.types_files %}
      "{{ types_file }}"{{ "," if not loop.last else "" }}
{% endfor %}
    ],
    "host": "{{ server.host }}",
    "port": {{ server.port }}
  }{{ "," if not loop.last else "" }}
{% endfor %}
}
